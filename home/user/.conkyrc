out_to_x no
own_window no
out_to_console yes
background no
max_text_width 0

# Update interval in seconds
update_interval 2

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0

# Shortens units to a single character (kiB->k, GiB->G, etc.). Default is off.
short_units yes

# How strict should if_up be when testing an interface for being up?
# The value is one of up, link or address, to check for the interface
# being solely up, being up and having link or being up, having link
# and an assigned IP address. 
if_up_strictness address

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes 

# Stuff after 'TEXT' will be formatted on screen
TEXT

# JSON for i3bar

 [
  { "full_text" : "pacman ${exec checkupdates | wc -l} cower ${exec cower -u | wc -l}" , "color" : "\#ffffff" },
  { "full_text" : ${if_up enp4s0} "${addr enp4s0}" , "color" : "\#ffffff" ${else} "" ${endif} },
  { "full_text" : ${if_up wlp3s0} "${wireless_essid wlp3s0} ${addr wlp3s0}" , "color" : "\#ffffff" ${else} "" ${endif} },
  { "full_text" : "/ ${fs_free /}" , "color" : "\#ffffff" },
  { "full_text" : "RAM ${memperc}%" , "color" :
    ${if_match ${memperc}<90} "\#ffffff" ${else} "\#ff0000" ${endif} },
  { "full_text" : "${acpitemp} Â°C" , "color" : "\#ffffff" },
  { "full_text" : "${battery_short}" , "color" :
    ${if_match ${battery_percent}>15} "\#ffffff" ${else} "\#ff0000" ${endif} },
  { "full_text" : "vol ${exec pactl list sinks | grep "Volume: f" | cut -d "/" -f2 }" , "color" : "\#ffffff" },
  { "full_text" : "${exec skb -p | awk '{print tolower($0)}' | cut -b 1-2}" , "color" : "\#ffffff" },
  { "full_text" : "${time %d-%m-%y %H:%M}" , "color" : "\#ffffff" }
 ],
